{
  "compilerOptions": {
    "module": "umd",
    "esModuleInterop": false,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "src"
  ]
}
